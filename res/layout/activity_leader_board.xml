<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="15dp"
    android:paddingTop="50dp"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leader_head" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:onClick="allTimeLeaderBoard"
            android:padding="20dp"
            android:text="All Time"
            android:textColor="@color/color_all_time"/>"

        <ImageButton
            android:id="@+id/refresh_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            
            android:onClick="refresh"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_refresh_daily" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:onClick="dailyLeaderBoard"
            android:padding="20dp"
            android:text="Daily"
            android:textColor="@color/color_daily" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerInParent="true" >

        <ScrollView
            android:id="@+id/scrollView_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/leaderboard_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp" >
            </TableLayout>
        </ScrollView>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/leader_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Leaderboard"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>